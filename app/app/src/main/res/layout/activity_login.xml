<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ainhoa.app.LoginActivity">

    <TextView
        android:id="@+id/txtPruebaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="PANTALLA DE LOGIN\nAquí ira el logo de la app etc. y abajo, donde el botón, la opcion de login. Ahora el botón nos lleva a la siguiente Activity que será el menú de historias: una lista con las historias disponibles (se puede quitar si solo creamos una historia)"
         />

    <Button
        android:id="@+id/btnToHistorias"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="Menu Historias"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="395dp" />

    <Button
        android:id="@+id/btnMapAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="añadir ubicaciones" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtPruebaLogin"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/signed_out"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
</RelativeLayout>
